<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/normal_view"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"

            android:layout_weight="1"
            android:background="@drawable/gradient_green_box"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/moderate_view"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"

            android:layout_weight="1"
            android:background="@drawable/gradient_blue_box"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/high_view"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"

            android:layout_weight="1"
            android:background="@drawable/gradient_red_box"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/total_view"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"

            android:layout_weight="1"
            android:background="@drawable/gradient_gray_box"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout

        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Normal"
            android:textColor="#000000"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/txt_moderate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Moderate"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingRight="20dp"

            android:gravity="center"
            android:layout_weight="1"
            android:text="High"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Total"
            android:textAlignment="center" />
    </LinearLayout>



</LinearLayout>